@model Nigon.WebUI.Models.NavModel
@{
    Layout = null;
}

@foreach (var link in Model.category)
{
    <div id="groupOfCategory">
        <div class="groupOfItems">
            @link.CategoryName
        </div>
        <div class="itemOfCategory">
           @foreach (var sublink in Model.subCategory.Where(w => w.CategoryID == link.CategoryID).Select(s => new { s.SubCategoryName, s.SubCategoryUrl }))
           {
               @Html.RouteLink(sublink.SubCategoryName, new { controller = "Product", action = "List", subcategory = sublink.SubCategoryUrl, page = 1 }, new { @class = sublink.SubCategoryName == ViewBag.SelectedCategory ? "selected" : null })
           }
        </div>
    </div>
}
