@model Nigon.WebUI.Models.ProductViewModel
<table class="tableCreateEdit">
    <caption>Пожалуйста, введите необходимую информацию по лоту</caption>
    <tr>
        <td class="tdRight">Название:</td>
        <td>@Html.TextBoxFor(model => model.products.Name, new { @class = "editTextBox" })</td>
    </tr>
    <tr>
        <td class="tdRight">Описание:</td>
        <td>@Html.TextAreaFor(model => model.products.Description, new { rows=5, columns=40, @id = "editTextArea" })</td>
    </tr>
    <tr>
        <td class="tdRight">Текущая цена:</td>
        <td>@Html.TextBoxFor(model => model.products.Price, new { @class = "editTextBox" })</td>
    </tr>
    <tr>
        <td class="tdRight">Категория:</td>
        <td>
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            if (Model != null) { 
            foreach(var s in Model.subCategory) {
                listItems.Add(new SelectListItem
                {
                    Text = s.SubCategoryName,
                    Value = s.SubCategoryID.ToString()
                });
            }
            }
        }
        @Html.DropDownListFor(model => model.SelectedOrderId, listItems, new { @id = "editDropDown" })       
        </td>
    </tr>
    <tr>
        <td class="tdRight">Стартовая цена:</td>
        <td>@Html.TextBoxFor(model => model.productView.StartPrice, new { @class = "editTextBox" })</td>
    </tr>
    <tr>
        <td class="tdRight">Шаг ставки:</td>
        <td>@Html.TextBoxFor(model => model.productView.StepPrice, new { @class = "editTextBox" })</td>
    </tr>
    <tr>
        <td class="tdRight">Состояние товара:</td>
        <td>@Html.TextBoxFor(model => model.productView.StateOfProduct, new { @class = "editTextBox" })</td>
    </tr>
    <tr>
        <td class="tdRight">Начало торгов:</td>
        @{ Html.EnableClientValidation(false); }
        <td>@Html.TextBoxFor(model => model.productView.StartOfAuction, new { @class = "dateTimePicker" })</td>
        @{ Html.EnableClientValidation(true); }
    </tr>
    <tr>
        <td class="tdRight">Завершение торгов:</td>
        @{ Html.EnableClientValidation(false); }
        <td>@Html.TextBoxFor(model => model.productView.EndOfAuction, new { @class = "dateTimePicker" })</td>
        @{ Html.EnableClientValidation(true); }
    </tr>
    <tr>
        <td class="tdRight">Местоположение:</td>
        <td>@Html.TextBoxFor(model => model.productView.Location, new { @class = "editTextBox" })</td>
    </tr>
    <tr>
        <td><input type="submit" id="btn" value="Сохранить лот" style="margin-top: 20px;" /><br><br></td>
        <td><input type='file' id="files" multiple="multiple" /></td>
    </tr>
</table>