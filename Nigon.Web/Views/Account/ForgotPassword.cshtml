@model Nigon.Web.Models.AccountModels.ForgotPassword

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Регистрация</h2>
<p>
    Заполните ваши данные.
</p>
<p>
    Пароль должен содержать как минимум @Membership.MinRequiredPasswordLength букв.
</p>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Произошла ошибка. Пожалуйста проверьте введеные данные и попробуйте снова.")
    <div>
        <fieldset>
            <legend>Восстановление пароля</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <p>
                <input type="submit" value="Восстановить" />
            </p>
        </fieldset>
    </div>
}
@section Scripts {
    @Html.Partial("JSValidation")
}

